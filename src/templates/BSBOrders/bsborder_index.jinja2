{% extends "base.jinja2" %}
{% block content %}
   <div class="jumbotron">
        <h1 class="display-4">Query BSB Cash File Data</h1>
        <p class="lead">This webpage will be used to quickly query BSB Cash file data.</p>
    </div>
    <form action="{{ url_for('bsborders.bsborders_query') }}"  method="post">
            <div class="form-group">
            <label for="exampleFormControlSelect1">Region Select</label>
            <select class="form-control" id="region" name="region">
              {% for region in regions %}
                <option>{{ region }}</option>
            {% endfor %}}
            </select>
          </div>
            <div class="form-group">
                <label for="orderDetailID">BSB Order Detail ID</label>
                <input type="text" class="form-control" id="orderDetailID" name="orderDetailID"
                       placeholder="Enter Order Detail IDs seperated by commas: 8567896, 23647519 etc">
            </div>
            <div class="form-group">
                <label for="playerID">Player ID</label>
                <input type="text" class="form-control" id="playerID" name="playerID"
                       placeholder="Enter playerIDs seperated by commas: 854762, 563214 etc">
            </div>
            <div class="form-group">
                <label for="payment_Date_Start">From Date</label>
                <input type="text" class="form-control" id="payment_Date_Start" name="payment_Date_Start"
                       placeholder="Enter Start Date in format:- Year-Month-Day">
            </div>
            <div class="form-group">
                <label for="payment_Date_End">To Date</label>
                <input type="text" class="form-control" id="payment_Date_End" name="payment_Date_End"
                       placeholder="Enter End Date in format:- Year-Month-Day">
            </div>


            <button type="submit" class="btn btn-success">Submit</button>
    </form>
{% endblock %}